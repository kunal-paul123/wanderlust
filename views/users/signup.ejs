<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-6 offset-4 mt-2 signup">
        <form action="/signup" method="post" novalidate class="needs-validation">
            <p class="col-9 offset-2">SignUp or create an account</p>
            <div class="mb-3 signup-user">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" id="username" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="mb-3 signup-email">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="email" id="email" class="form-control" required>
            </div>

            <div class="mb-3 signup-pass">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" id="email" class="form-control" required>
            </div>

            <button class="btn btn-success offset-3 mt-3">SignUp</button>
        </form>
    </div>
</div>